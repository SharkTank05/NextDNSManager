<resources>
    <!-- Base application theme. -->
    <!-- Defined a new style with three items of color. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkgray</item>
        <item name="colorSecondary">@color/darkgray</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fontFamily" > sans-serif </item>
        <item name="android:statusBarColor">@color/darkgray</item>
        <item name="android:navigationBarColor">@color/darkgray</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name= "windowNoTitle">true</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>
    <style name="CustomToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/darkgray</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>