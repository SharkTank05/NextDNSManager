<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent1_dark</item>
        <item name="colorSecondary">@color/accent1_dark</item>
        <item name="colorTertiary">@color/white</item>
        <item name="fontFamily" > sans-serif </item>
        <item name="android:statusBarColor">@color/accent1_dark</item>
        <item name="android:navigationBarColor">@color/accent1_dark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name= "windowNoTitle">true</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/accent1_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="CustomToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/accent1_dark</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="PreferenceTheme" parent="@style/AppTheme">
        <item name="colorAccent">@color/accent1</item>
        <item name="android:colorBackground">@color/darkgray</item>
    </style>
</resources>